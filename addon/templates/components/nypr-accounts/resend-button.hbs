{{#if ready}}
  {{#if resendAction}}
    <button
      class={{concat 'resend-button ' classNames}}
      data-category={{data-category}}
      data-action={{data-action}}
      data-label={{data-label}}
      {{action (perform tryResend resendAction)}}>{{yield}}</button>
  {{else}}
    <button
      class={{concat 'resend-button ' classNames}}
      data-category={{data-category}}
      data-action={{data-action}}
      data-label={{data-label}}
      {{action "resend" target email}}>{{yield}}</button>
  {{/if}}
{{else if success}}
  <span class='resend-success'>{{successMessage}}</span>
{{else if error}}
  <span class='resend-error'>{{errorMessage}}</span>
{{/if}}
